                     , Data.Express.Canon
                     , Data.Express.Match
                     , Data.Express.Utils.List
                     , Data.Express.Utils.String
                     , Data.Express.Utils.Typeable
                     , Data.Express.Utils.TH
  hs-source-dirs:      src
  build-depends:       base >= 4 && < 5, template-haskell
  default-language:    Haskell2010


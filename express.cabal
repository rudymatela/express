                     , Data.Express.Core
                     , Data.Express.Basic
                     , Data.Express.Map
                     , Data.Express.Express
                     , Data.Express.Express.Derive
                     , Data.Express.Fixtures
                     , Data.Express.Fold
                     , Data.Express.Hole
                     , Data.Express.Instances
                     , Data.Express.Name
